@{
    ViewBag.Title = "Recruitment Agency Configuration";
}

@section scripts
{
    <script type="text/javascript">
        var repModuleSettingsViewModel = new ViewModels.Representatives.RepModuleSettings();
        ko.applyBindings(repModuleSettingsViewModel, $('data-current-module=representatives')[0]);
        repModuleSettingsViewModel.sammy.run();
    </script>
}

<div class="content fixed to-top" data-current-module="representatives">
    <div data-side-swiper="root">
        <div data-side-swiper="deck">
            <div id="all" data-side-swiper="on">
                <form class="group">
                    <div class="on-left from-top">
                        <header>
                            <h1>
                                @ViewBag.Title
                            </h1>
                        </header>
                    </div>
                    <aside class="on-right from-top" data-fixed-scroll="root">
                        <div data-fixed-scroll="anchor"></div>
                        <div data-fixed-scroll="content">
                            @Html.Partial(MVC.Shared.Views._ConfigurationSidebarNav)
                        </div>
                    </aside>
                    <h2>Application Settings</h2>
                    <h3>Welcome Message</h3>
                    <div class="advfield">
                        <textarea>Configure custom content to be displayed before a recruitment agency applies to represent you</textarea>
                    </div>
                    <h3>Notifications</h3>
                </form>
            </div>
        </div>
    </div>
</div>
